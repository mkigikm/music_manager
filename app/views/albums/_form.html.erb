<form action="<%= album.persisted? ? album_url(album) : albums_url %>" method="post">
  <%= auth_token %>

  <%= post_or_patch(album) %>

  <label for="album_title">Title</label>
  <input type="text" name="album[title]" value="<%= album.title %>">
  <br>

  <label for="album_band_id">Band</label>
  <select name="album[band_id]">
  <% bands.each do |band| %>
    <option value="<%= band.id %>"<%= "selected" if album.band == band %>>
      <%= band.name %>
    </option>
  <% end %>
  </select>
  <br>

  <label>
    Studio <input type="radio" name="album[studio]" value="true"<%= 'checked="checked"' if album.studio? %>>
    Live <input type="radio" name="album[studio]" value="false"<%= 'checked="checked"' if album.live? %>>
  </label>
  <br>

  <button><%= album.persisted? ? "Edit" : "Create" %></button>
</form>
